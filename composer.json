{
    "name": "loicjazon/mono",
    "require": {
        "php": "^7.2",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/monorepo-builder": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "YourMonorepo\\FirstPackage\\": "packages/first-package/src",
            "YourMonorepo\\SecondPackage\\": "packages/second-package/src"
        }
    },
    "replace": {
        "your-monorepo/first-package": "1.0.24",
        "your-monorepo/second-package": "1.0.24"
    }
}
